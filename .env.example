# .env.example
# ---
# This file is a template. Copy to .env and fill in your actual values.
# NEVER commit the .env file to Git.
# ---

# ============================================
# NODE ENV
# ============================================
NODE_ENV="development"

# ============================================
# APPLICATION PORTS & URLS
# ============================================
# Domain for the client's shop (used for links)
DOMAIN="brand.shop"
# Full URL for the admin panel
ADMIN_URL="https://brand.shop/admin"
# Full URL for the checkout
CHECKOUT_URL="https://brand.shop"
# Port for the backend API
PORT=4000

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Matches the docker-compose.yml file
DATABASE_URL="postgresql://branduser:brandpassword@localhost:5432/brandorder"

# ============================================
# CACHE (Redis)
# ============================================
# Matches the docker-compose.yml file
REDIS_URL="redis://localhost:6379"

# ============================================
# AUTHENTICATION
# ============================================
# Generate a strong, random 32+ character string
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"
# Generate a random 32-byte (64 hex chars) key for encrypting secrets
ENCRYPTION_KEY="your-32-byte-encryption-key-for-razorpay-secrets"

# ============================================
# AWS S3 (Image Storage)
# ============================================
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="ap-south-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# ============================================
# RAZORPAY (Payment Gateway)
# ============================================
# Public key for the frontend
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_xxxxxxxxxxxxx"
# Secret for verifying webhooks
RAZORPAY_WEBHOOK_SECRET="your-razorPAY-webhook-secret"

# ============================================
# WHATSAPP (Notifications)
# ============================================
# API key from your chosen provider (e.g., Gupshup, Twilio)
WHATSAPP_API_KEY="your-whatsapp-provider-api-key"
# Your brand's approved WhatsApp Business phone number
WHATSAPP_PHONE_NUMBER="919876543210"