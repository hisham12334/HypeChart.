// packages/database/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- 1. THE BRAND (USER) ---
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  
  // Brand Identity
  brandName String?
  slug      String?  @unique // The Public Link (e.g. 'drip-kult')
  logoUrl   String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  products     Product[]
  transactions Transaction[]
  customers    Customer[]
  orders       Order[]
}

// --- 2. THE PRODUCT (Restored) ---
model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String?  @unique
  checkoutSlug String  @unique
  description String?
  basePrice   Decimal  // Use Decimal for money math
  productDropDate DateTime? // When the product goes live
  images      String[] // Array of Cloudinary URLs

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  variants    Variant[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- 3. THE VARIANTS (Sizes/Colors) ---
model Variant {
  id             String  @id @default(uuid())
  name           String  // e.g. "Size M"
  inventoryCount Int     @default(0)
  reservedCount  Int     @default(0)
  priceAdjustment Decimal @default(0)

  productId      String
  product        Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

// --- 4. THE MONEY LEDGER (New) ---
model Transaction {
  id                String   @id @default(uuid())
  
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  
  // Audit Trail
  razorpayOrderId   String   @unique
  razorpayPaymentId String?
  
  // The Math
  grossAmount       Float
  platformFee       Float
  netAmount         Float
  
  status            String   @default("CAPTURED")
  createdAt         DateTime @default(now())
}

// --- 5. CRM & ORDERS (Restored for Checkout) ---

model Customer {
  id          String   @id @default(uuid())
  
  userId      String   // The Brand this customer belongs to
  user        User     @relation(fields: [userId], references: [id])
  
  name        String
  phone       String
  email       String?
  
  totalSpent  Decimal  @default(0)
  totalOrders Int      @default(0)
  lastOrderAt DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orders      Order[]
  addresses   Address[]
  
  @@index([userId, phone]) // Fast lookup for repeat customers
}

model Address {
  id           String   @id @default(uuid())
  
  customerId   String
  customer     Customer @relation(fields: [customerId], references: [id])
  
  addressLine1 String
  city         String
  state        String
  pincode      String
  isDefault    Boolean  @default(false)
  
  orders       Order[]
}

model Order {
  id              String   @id @default(uuid())
  orderNumber     String   @unique // ORD-TIMESTAMP-RANDOM
  
  userId          String   // The Brand
  user            User     @relation(fields: [userId], references: [id])
  
  customerId      String
  customer        Customer @relation(fields: [customerId], references: [id])
  
  addressId       String
  address         Address  @relation(fields: [addressId], references: [id])
  
  razorpayOrderId   String @unique
  razorpayPaymentId String?
  
  // Financials
  subtotal        Decimal
  shippingFee     Decimal  @default(0)
  total           Decimal
  
  paymentStatus   String   // 'paid', 'pending', 'failed'
  status          String   // 'processing', 'shipped', 'delivered'
  productDropDate DateTime?
  paidAt          DateTime?
  
  items           OrderItem[]
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model OrderItem {
  id          String   @id @default(uuid())
  
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
  
  productId   String
  variantId   String
  
  productName String
  variantName String
  price       Decimal
  quantity    Int
}

model WebhookEvent {
  id          String   @id @default(uuid())
  eventId     String   @unique
  eventType   String
  payload     Json
  processedAt DateTime @default(now())
}

model CartReservation {
  id        String   @id @default(uuid())
  variantId String
  sessionId String
  quantity  Int
  expiresAt DateTime
  createdAt DateTime @default(now())
}
